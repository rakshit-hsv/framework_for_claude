{
  "name": "@rakshit-hsv/sop-validate",
  "version": "1.0.0",
  "description": "SOP Validation CLI - Validates code against SOP rules for NestJS, Prisma, Supabase",
  "main": "dist/cli.js",
  "types": "dist/cli.d.ts",
  "bin": {
    "sop-validate": "./dist/cli.js"
  },
  "files": [
    "dist",
    "sop-files",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",

    "validate": "ts-node cli.ts",
    "validate:full": "ts-node cli.ts --full --verbose",
    "validate:staged": "ts-node cli.ts --staged",
    "validate:changed": "ts-node cli.ts --changed",
    "validate:commit": "ts-node cli.ts --commit",
    "validate:branch": "ts-node cli.ts --branch",

    "validate:supabase": "ts-node cli.ts -s 2-supabase",
    "validate:prisma": "ts-node cli.ts -s 3-database-prisma",
    "validate:errors": "ts-node cli.ts -s 5-error-handling-logging",
    "validate:api": "ts-node cli.ts -s 8-api-design-patterns",
    "validate:security": "ts-node cli.ts -v supabase-auth -v general-practices",

    "validate:json": "ts-node cli.ts -f json",
    "validate:github": "ts-node cli.ts -f github --strict",

    "test": "ts-node test-runner.ts",
    "test:supabase": "ts-node test-runner.ts supabase-auth",
    "test:prisma": "ts-node test-runner.ts prisma-queries",
    "test:all": "ts-node test-runner.ts --all",

    "fix": "ts-node self-correction.ts",
    "fix:dry-run": "ts-node self-correction.ts --max-iterations 0",

    "claude:validate": "ts-node claude-code-validator.ts",
    "claude:check": "ts-node claude-code-validator.ts --json",

    "precommit": "ts-node cli.ts --staged --strict",
    "ci": "ts-node cli.ts --staged -f github --strict --fail-on-warnings"
  },
  "keywords": [
    "validation",
    "sop",
    "code-quality",
    "nestjs",
    "prisma",
    "supabase",
    "claude",
    "ai-code-review",
    "linter",
    "cli"
  ],
  "author": "rakshit-hsv",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rakshit-hsv/framework_for_claude.git"
  },
  "bugs": {
    "url": "https://github.com/rakshit-hsv/framework_for_claude/issues"
  },
  "homepage": "https://github.com/rakshit-hsv/framework_for_claude#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}
